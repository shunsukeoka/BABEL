{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-recess-order",
        "stylelint-config-html",
        "stylelint-config-prettier"
    ],
    "rules": {
        "indentation": 4,
        "order/order": [
            "less-mixins",
            "dollar-variables",
            "custom-properties",
            "declarations",
            "rules"
        ],
        "no-empty-source": null
    },
    "plugins": [
        "stylelint-scss",
        "stylelint-order"
    ]
}
